<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gpnu.xiaozhudaina.dao.OrderDao">
    <select id="findOrderByOrderNo" resultType="cn.gpnu.xiaozhudaina.entity.Order">
        select * from tb_order where order_no = #{orderNo}
    </select>
    <select id="queryOrderList" resultType="cn.gpnu.xiaozhudaina.entity.Order">
        select * from tb_order where user_id = #{userId}
        order by create_time desc
    </select>

    <update id="submitOrder" parameterType="cn.gpnu.xiaozhudaina.entity.Order" keyColumn="order_no" useGeneratedKeys="true">
        update tb_order
        <set>
            <if test="consignee_phone != null">consignee_phone = #{consigneePhone},</if>
            <if test="order_no != null">order_no = #{orderNo},</if>
            <if test="user_id != null">user_id = #{userId}</if>
        </set>
        where user_id = #{userId}
    </update>

</mapper>